---
import { Icon } from "astro-icon/components";
import { navBarConfig, siteConfig } from "../config";
import { LinkPresets } from "../constants/link-presets";
import { LinkPreset, type NavBarLink } from "../types/config";
import { url } from "../utils/url-utils";
import LightDarkSwitch from "./LightDarkSwitch.svelte";
import Search from "./Search.svelte";
import DisplaySettings from "./widget/DisplaySettings.svelte";
import NavMenuPanel from "./widget/NavMenuPanel.astro";

const className = Astro.props.class;

let links: NavBarLink[] = navBarConfig.links.map(
	(item: NavBarLink | LinkPreset): NavBarLink => {
		if (typeof item === "number") {
			return LinkPresets[item];
		}
		return item;
	},
);
---
<nav id="navbar" aria-label="Primary" class="z-50 onload-animation">
    <div class="absolute h-8 left-0 right-0 -top-8 bg-[var(--card-bg)] transition"></div> <!-- used for onload animation -->
    <div class:list={[
        className,
        "card-base !overflow-visible max-w-[var(--page-width)] h-[4.5rem] !rounded-t-none mx-auto flex items-center justify-between px-4"]}>
        <a href={url('/')} class="btn-plain scale-animation rounded-lg h-[3.25rem] px-5 font-bold active:scale-95">
            <div class="flex flex-row text-[var(--primary)] items-center text-md">
                <Icon name="material-symbols:home-outline-rounded" class="text-[1.75rem] mb-1 mr-2" />
                {siteConfig.title}
            </div>
        </a>
        <div class="hidden md:flex">
            {links.map((l) => {
                return <a aria-label={l.name} href={l.external ? l.url : url(l.url)} target={l.external ? "_blank" : null}
                          rel={l.external ? "noopener noreferrer" : null}
                          class="btn-plain scale-animation rounded-lg h-11 font-bold px-5 active:scale-95"
                >
                    <div class="flex items-center">
                        {l.name}
                        {l.external && <Icon name="fa6-solid:arrow-up-right-from-square" class="text-[0.875rem] transition -translate-y-[1px] ml-1 text-black/[0.2] dark:text-white/[0.2]"></Icon>}
                    </div>
                </a>;
            })}
        </div>
        <div class="flex">
            <!--<SearchPanel client:load>-->
            <Search client:only="svelte"></Search>
            {!siteConfig.themeColor.fixed && (
                    <button type="button" aria-label="Display Settings" aria-controls="display-setting" aria-expanded="false" class="btn-plain scale-animation rounded-lg h-11 w-11 active:scale-90" id="display-settings-switch">
                        <Icon name="material-symbols:palette-outline" class="text-[1.25rem]"></Icon>
                    </button>
            )}
            <LightDarkSwitch client:only="svelte"></LightDarkSwitch>
            <button type="button" aria-label="Menu" name="Nav Menu" aria-controls="nav-menu-panel" aria-expanded="false" class="btn-plain scale-animation rounded-lg w-11 h-11 active:scale-90 md:!hidden" id="nav-menu-switch">
                <Icon name="material-symbols:menu-rounded" class="text-[1.25rem]"></Icon>
            </button>
        </div>
        <NavMenuPanel links={links}></NavMenuPanel>
        <DisplaySettings client:only="svelte"></DisplaySettings>
    </div>
</nav>

<script>
function switchTheme() {
    if (localStorage.theme === 'dark') {
        document.documentElement.classList.remove('dark');
        localStorage.theme = 'light';
    } else {
        document.documentElement.classList.add('dark');
        localStorage.theme = 'dark';
    }
}

function getFocusableElements(root) {
    const selectors = [
        'a[href]',
        'button:not([disabled])',
        'input:not([disabled])',
        'select:not([disabled])',
        'textarea:not([disabled])',
        '[tabindex]:not([tabindex="-1"])',
    ];
    return Array.from(root.querySelectorAll(selectors.join(',')))
        .filter((el) => !el.hasAttribute('disabled') && el.getAttribute('aria-hidden') !== 'true');
}

function disableFocusWithin(root) {
    const focusables = getFocusableElements(root);
    focusables.forEach((el) => {
        if (!el.hasAttribute('data-a11y-had-tabindex')) {
            el.setAttribute('data-a11y-had-tabindex', el.hasAttribute('tabindex') ? '1' : '0');
            el.setAttribute('data-a11y-tabindex', el.getAttribute('tabindex') ?? '');
        }
        el.setAttribute('tabindex', '-1');
    });
}

function restoreFocusWithin(root) {
    const nodes = Array.from(root.querySelectorAll('[data-a11y-had-tabindex]'));
    nodes.forEach((el) => {
        const had = el.getAttribute('data-a11y-had-tabindex');
        const val = el.getAttribute('data-a11y-tabindex');
        if (had === '1') {
            el.setAttribute('tabindex', val ?? '');
        } else {
            el.removeAttribute('tabindex');
        }
        el.removeAttribute('data-a11y-had-tabindex');
        el.removeAttribute('data-a11y-tabindex');
    });
}

function isOpen(panel) {
    return panel && !panel.classList.contains('float-panel-closed');
}

function closePanel(btn, panel, { returnFocus = true } = {}) {
    if (!btn || !panel) return;
    if (!isOpen(panel)) return;

    panel.classList.add('float-panel-closed');
    panel.setAttribute('aria-hidden', 'true');
    panel.setAttribute('inert', '');
    disableFocusWithin(panel);
    btn.setAttribute('aria-expanded', 'false');
    if (returnFocus) btn.focus();
}

function openPanel(btn, panel, { focusSelector } = {}) {
    if (!btn || !panel) return;
    if (isOpen(panel)) return;

    panel.classList.remove('float-panel-closed');
    panel.setAttribute('aria-hidden', 'false');
    panel.removeAttribute('inert');
    restoreFocusWithin(panel);
    btn.setAttribute('aria-expanded', 'true');

    requestAnimationFrame(() => {
        const target = focusSelector ? panel.querySelector(focusSelector) : null;
        const focusable = target || getFocusableElements(panel)[0];
        (focusable || panel).focus?.();
    });
}

function togglePanel(btn, panel, options) {
    if (!btn || !panel) return;
    if (isOpen(panel)) {
        closePanel(btn, panel);
    } else {
        openPanel(btn, panel, options);
    }
}

function setupNavbarA11y() {
    const switchBtn = document.getElementById('scheme-switch');
    if (switchBtn) {
        switchBtn.addEventListener('click', () => switchTheme());
    }

    const settingBtn = document.getElementById('display-settings-switch');
    const menuBtn = document.getElementById('nav-menu-switch');

    const getSettingPanel = () => document.getElementById('display-setting');
    const getMenuPanel = () => document.getElementById('nav-menu-panel');

    const ensurePanelInitialized = (panel) => {
        if (!panel || panel.dataset.a11yInit === '1') return;
        panel.dataset.a11yInit = '1';
        if (panel.classList.contains('float-panel-closed')) {
            panel.setAttribute('aria-hidden', 'true');
            panel.setAttribute('inert', '');
            disableFocusWithin(panel);
        } else {
            panel.setAttribute('aria-hidden', 'false');
            panel.removeAttribute('inert');
            restoreFocusWithin(panel);
        }
    };

    // Initialize menu panel (Astro component exists in SSR output).
    const initialMenuPanel = getMenuPanel();
    if (initialMenuPanel) ensurePanelInitialized(initialMenuPanel);

    if (settingBtn) {
        settingBtn.addEventListener('click', () => {
            const settingPanel = getSettingPanel();
            const menuPanel = getMenuPanel();
            if (!settingPanel) return;
            ensurePanelInitialized(settingPanel);

            // Only one floating panel open at a time.
            if (menuBtn && menuPanel) closePanel(menuBtn, menuPanel, { returnFocus: false });
            togglePanel(settingBtn, settingPanel, { focusSelector: 'input, button' });
        });
    }

    if (menuBtn) {
        menuBtn.addEventListener('click', () => {
            const menuPanel = getMenuPanel();
            const settingPanel = getSettingPanel();
            if (!menuPanel) return;
            ensurePanelInitialized(menuPanel);

            if (settingBtn && settingPanel) closePanel(settingBtn, settingPanel, { returnFocus: false });
            togglePanel(menuBtn, menuPanel, { focusSelector: 'a[href]' });
        });

        // Close the menu after selecting an item (mobile UX).
        const menuPanel = getMenuPanel();
        if (menuPanel) {
            ensurePanelInitialized(menuPanel);
            menuPanel.addEventListener('click', (e) => {
                const target = e.target;
                if (target && target.closest && target.closest('a[href]')) {
                    closePanel(menuBtn, menuPanel, { returnFocus: false });
                }
            });
        }
    }

    document.addEventListener('keydown', (e) => {
        // ESC closes whichever panel is open.
        if (e.key === 'Escape') {
            const settingPanel = getSettingPanel();
            if (settingBtn && settingPanel && isOpen(settingPanel)) {
                e.preventDefault();
                closePanel(settingBtn, settingPanel);
                return;
            }
            const menuPanel = getMenuPanel();
            if (menuBtn && menuPanel && isOpen(menuPanel)) {
                e.preventDefault();
                closePanel(menuBtn, menuPanel);
            }
            return;
        }

        // Focus trap for open floating panels.
        if (e.key !== 'Tab') return;
        const settingPanel = getSettingPanel();
        const menuPanel = getMenuPanel();
        const activePanel = (settingPanel && isOpen(settingPanel)) ? settingPanel : (menuPanel && isOpen(menuPanel)) ? menuPanel : null;
        if (!activePanel) return;
        const focusables = getFocusableElements(activePanel);
        if (focusables.length === 0) return;
        const first = focusables[0];
        const last = focusables[focusables.length - 1];
        if (e.shiftKey && document.activeElement === first) {
            e.preventDefault();
            last.focus();
        } else if (!e.shiftKey && document.activeElement === last) {
            e.preventDefault();
            first.focus();
        }
    });

    // Click outside to close.
    document.addEventListener('pointerdown', (e) => {
        const target = e.target;
        if (!target) return;

        const settingPanel = getSettingPanel();
        const menuPanel = getMenuPanel();
        if (settingBtn && settingPanel && isOpen(settingPanel)) {
            if (!settingPanel.contains(target) && !settingBtn.contains(target)) {
                closePanel(settingBtn, settingPanel, { returnFocus: false });
            }
        }
        if (menuBtn && menuPanel && isOpen(menuPanel)) {
            if (!menuPanel.contains(target) && !menuBtn.contains(target)) {
                closePanel(menuBtn, menuPanel, { returnFocus: false });
            }
        }
    }, true);
}

setupNavbarA11y();
</script>

{import.meta.env.PROD && <script is:inline define:vars={{scriptUrl: url('/pagefind/pagefind.js')}}>
async function loadPagefind() {
    try {
        const response = await fetch(scriptUrl, { method: 'HEAD' });
        if (!response.ok) {
            throw new Error(`Pagefind script not found: ${response.status}`);
        }

        const pagefind = await import(scriptUrl);

        await pagefind.options({
            excerptLength: 20
        });

        window.pagefind = pagefind;

        document.dispatchEvent(new CustomEvent('pagefindready'));
        console.log('Pagefind loaded and initialized successfully, event dispatched.');
    } catch (error) {
        console.error('Failed to load Pagefind:', error);
        window.pagefind = {
            search: () => Promise.resolve({ results: [] }),
            options: () => Promise.resolve(),
        };
        document.dispatchEvent(new CustomEvent('pagefindloaderror'));
        console.log('Pagefind load error, event dispatched.');
    }
}

if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadPagefind);
} else {
    loadPagefind();
}
</script>}
