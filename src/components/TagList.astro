---
const { tags } = Astro.props as { tags: { tag: string; count: number }[] };

const shown = tags.slice(0, 16);
const hidden = tags.slice(16);
---

<div class="tags">
  {shown.map(({ tag, count }) => (
    <a class="tag" href={`/tag/${encodeURIComponent(tag)}/`} title={`${count} posts`}>
      {tag}
    </a>
  ))}

  {hidden.length ? (
    <details>
      <summary>태그 더보기</summary>
      <div style="margin-top:10px; display:flex; flex-wrap:wrap; gap:8px;">
        {hidden.map(({ tag, count }) => (
          <a class="tag" href={`/tag/${encodeURIComponent(tag)}/`} title={`${count} posts`}>
            {tag}
          </a>
        ))}
      </div>
    </details>
  ) : null}
</div>
